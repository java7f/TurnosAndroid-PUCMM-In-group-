<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff"
            tools:context=".Javier.ShowTicketInfoActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/idToolbarCompany"
                layout="@layout/toolbar1"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/CompanyInfo"
                android:paddingTop="50dp"
                android:paddingBottom="25dp">

            <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="28sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/subsidiaryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="70dp"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="24sp"/>

            <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="120dp"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="160dp"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="14sp"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="20dp"
                android:padding="35dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/rectangle_text"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/infoTicket">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/ticketInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="#Tícket: "
                        android:textColor="@color/negro"
                        android:textSize="30sp"/>

                <TextView
                        android:id="@+id/ticketNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/negro"
                        android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/stationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Estación: "
                        android:textColor="@color/negro"
                        android:textSize="30sp"/>

                <TextView
                        android:id="@+id/stationId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/negro"
                        android:textSize="30sp"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/minutesLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutos Aproximadamente"
                    android:textColor="@color/negro"
                    android:textSize="22sp"/>


        </LinearLayout>


        <Button
                android:id="@+id/cancelTurn"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="510dp"
                android:backgroundTint="#b00020"
                android:onClick="cancelTurn"
                android:text="Cancelar turno"
                android:textColor="#ffffff"/>

    </RelativeLayout>
</ScrollView>